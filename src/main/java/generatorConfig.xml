<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 配置文件路径 -->
    <properties resource="db.properties"/>

    <!-- mysql 驱动地址 -->
    <!--<classPathEntry location="${drive.class.path}"/>-->

    <context id="dev" targetRuntime="MyBatis3">
    	<commentGenerator>
    		<!-- 是否去除自动生成的注释 true：是 ： false:否 -->
			<property name="suppressAllComments" value="true" />
    	</commentGenerator>
        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/db2"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成的 model 实体文件的包路径 -->
        <javaModelGenerator targetPackage="com.changjiang.entity" targetProject="src/main/java">
            <!-- 生成的包名中是否包含数据库 schema 名 -->
            <property name="enableSubPackages" value="false"/>
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成的 sqlmap xml 文件的路径 -->
        <sqlMapGenerator targetPackage="com.changjiang.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- 生成 dao 或 mapper 接口文件的包路径 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.changjiang.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="duty" domainObjectName="Duty">
            <!--<property name="ignoreQualifiersAtRuntime" value="true"/>-->
        </table>
        <table tableName="function" domainObjectName="Function"/>
        <table tableName="group" domainObjectName="Group"/>
        <table tableName="role"/>
        <table tableName="role_power" domainObjectName="RolePower"></table>
        <table tableName="serial_number" domainObjectName="Serial"/>
    </context>
</generatorConfiguration>