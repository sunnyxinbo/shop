<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changjiang.dao.SerialNumberDao">
    <resultMap id="result_SerialNumber_Map" type="com.changjiang.entity.SerialNumber">
        <id column="SerialNumber0" property="id" />
        <result column="SerialNumber1" property="lastSerialNum" />
    </resultMap>

    <sql id="Assist">
        <where>
            <foreach collection="require" item="req" separator=" ">
                ${req.require} #{req.value}
            </foreach>
        </where>
    </sql>

    <sql id="updateAssist">
        <where>
            <foreach collection="assist.require" item="req" separator=" ">
                ${req.require} #{req.value}
            </foreach>
        </where>
    </sql>

    <sql id="serial_number_Column">
        serial_number.id as SerialNumber0
        ,serial_number.last_serial_num as SerialNumber1
    </sql>

    <select id="getSerialNumberRowCount" parameterType="com.changjiang.common.Assist" resultType="java.lang.Long">
        select count(id) from serial_number
        <if test="require!=null"><include refid="Assist" /></if>
    </select>
    <select id="selectSerialNumber" parameterType="com.changjiang.common.Assist"  resultMap="result_SerialNumber_Map">
        select  <if test="distinct !=null">${distinct}</if>
        <choose>
            <when test="resultColumn!=null">${resultColumn}</when>
            <otherwise>
        <include refid="serial_number_Column" /> 
            </otherwise>
        </choose>
        from serial_number
        <if test="require!=null"><include refid="Assist" /></if>
        <if test="order !=null">${order}</if>
        <if test="rowSize !=null"> LIMIT #{rowSize} <if test="startRow !=null"> OFFSET #{startRow}</if></if>
    </select> 

    <select id="selectSerialNumberById" parameterType="java.lang.Integer" resultMap="result_SerialNumber_Map">
        select 
            <include refid="serial_number_Column" /> 
        from serial_number
        where serial_number.id = #{id}
    </select> 


    <insert id="insertSerialNumber" parameterType="com.changjiang.entity.SerialNumber">
        insert into serial_number(id,last_serial_num) 
        values(#{id},#{lastSerialNum})
    </insert>

    <insert id="insertNonEmptySerialNumber" parameterType="com.changjiang.entity.SerialNumber">
        insert into serial_number
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="lastSerialNum != null">last_serial_num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null"> #{id},</if>
            <if test="lastSerialNum != null"> #{lastSerialNum},</if>
        </trim>
    </insert>

    <delete id="deleteSerialNumberById" parameterType="java.lang.Integer">
        delete from serial_number
        where id = #{id}
    </delete>

    <delete id="deleteSerialNumber" parameterType="com.changjiang.common.Assist">
        delete from serial_number
        <if test="require!=null"><include refid="Assist" /></if>
    </delete>

    <update id="updateSerialNumberById" parameterType="com.changjiang.entity.SerialNumber">
        update serial_number set
            last_serial_num=#{lastSerialNum}
        where id=#{id}
    </update>

    <update id="updateNonEmptySerialNumberById" parameterType="com.changjiang.entity.SerialNumber">
        update serial_number
        <set>
            <if test="lastSerialNum != null">
                last_serial_num=#{lastSerialNum},
            </if>
        </set>
        where id=#{id}
    </update>

    <update id="updateSerialNumber" parameterType="map">
        update serial_number
        <set>
                id=#{enti.id},
                last_serial_num=#{enti.lastSerialNum},
        </set>
        <if test="assist.require!=null"><include refid="updateAssist" /></if>
    </update>

    <update id="updateNonEmptySerialNumber" parameterType="map">
        update serial_number
        <set>
            <if test="enti.id != null">
                id=#{enti.id},
            </if>
            <if test="enti.lastSerialNum != null">
                last_serial_num=#{enti.lastSerialNum},
            </if>
        </set>
        <if test="assist.require!=null"><include refid="updateAssist" /></if>
    </update>

</mapper>